[Unit]
Description=RPi Dashboard System Collector
After=network.target rpi-dashboard-app.service
Wants=rpi-dashboard-app.service

[Service]
Type=simple
User=blubb
WorkingDirectory=/home/blubb/rpi-dashboard
ExecStart=/home/blubb/rpi-dashboard/venv/bin/python collectors/system.py
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
